doctype html
html
  head
    title  TaskYak 
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css')
  body
    .jumbotron.text-center
      h1
        span.fa.fa-lock
        | TaskYak
      .container
        .col-sm-6.col-sm-offset-3
          h2
            span.fa.fa-sign-in
            |  Profile
          if user.firstName
           h3 Hi #{user.firstName}
          else
           h3 Hi #{user.email}
          a.btn.btn-default.btn-lg(href="/logout") Logout
          br
          a.btn.btn-default.btn-lg(href="/addtask") Add Task
          br
          a.btn.btn-default.btn-lg(href="/tasklist") Get my list