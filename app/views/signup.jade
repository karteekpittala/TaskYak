doctype html
html
  head
    title  TaskYak 
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css')
  body
    .jumbotron.text-center
      h1
        span.fa.fa-lock
        |  TaskYak
      .container
        .col-sm-6.col-sm-offset-3
          h2
            span.fa.fa-sign-in
            |  Login
          //         LOGIN FORM
          form(id="signup",method="POST", action='/signup')
            .form-group
              label First Name
              input#firstName.form-control(type='text', name='firstName')
            .form-group
              label Last Name
              input#lastName.form-control(type='text', name='lastName')  
            .form-group
              label Email
              input#email.form-control(type='text', name='email')
            .form-group
              label Password
              input#password.form-control(type='password', name='password')
            button.btn.btn-warning.btn-lg(type='submit',value='SignUp') Sign Up
          hr
          a.btn.btn-primary(href="/auth/facebook")
           span.fa.fa-facebook
            |   Log In With Facebook
          br
          

