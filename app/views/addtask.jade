doctype html
html
  head
    title  TaskYak 
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css')
  body
    .jumbotron.text-center
      h1
        span.fa.fa-lock
        | TaskYak
      .container
        .col-sm-6.col-sm-offset-3
          h2
            |  Add task
          //
             LOGIN FORM 
          form(name="addtask",action='/addtask', method='post')
            .form-group
              label What ya gotta get done?
              input#inputTaskName.form-control(type='text', placeholder="Get some milk dawg", name='taskName')
            .form-group
              label Who's gonna do that shit?
              h3
               each user in users
                input(type = 'checkbox', name="taskOwner",value='#{user.firstName} #{user.lastName}').form-control.input-sm
                | #{user.firstName} #{user.lastName}
              //input#inputName.form-control(type='text', placeholder="You lazy ass nigga", name='taskOwner')
            button#btnsubmit.btn.btn-warning.btn-lg(type='submit') Add it
          
